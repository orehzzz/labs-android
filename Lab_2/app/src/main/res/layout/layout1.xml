<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/toActivity2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="До Activity2"
        app:layout_constraintBottom_toTopOf="@id/spaceBetween_to2_to3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75"
        tools:ignore="HardcodedText" />

    <Space
        android:id="@+id/spaceBetween_to2_to3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:0"
        app:layout_constraintTop_toBottomOf="@id/toActivity2"
        app:layout_constraintBottom_toTopOf="@id/toActivity3" />

    <Button
        android:id="@+id/toActivity3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="До Activity3"
        app:layout_constraintBottom_toTopOf="@id/spaceBetween_to3_to4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceBetween_to2_to3"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75"
        tools:ignore="HardcodedText" />

    <Space
        android:id="@+id/spaceBetween_to3_to4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/toActivity3"
        app:layout_constraintBottom_toTopOf="@id/toActivity4" />

    <Button
        android:id="@+id/toActivity4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="До Activity4"
        app:layout_constraintBottom_toTopOf="@id/spaceBetween_to4_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceBetween_to3_to4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75"
        tools:ignore="HardcodedText" />

    <Space
        android:id="@+id/spaceBetween_to4_exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/toActivity4"
        app:layout_constraintBottom_toTopOf="@id/exit" />

    <Button
        android:id="@+id/exit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Вийти"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceBetween_to4_exit"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75"
        tools:ignore="HardcodedText" />

